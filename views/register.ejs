<%- include("partials/header"); -%>

<div class="container form-login">
    <form class="form-signin" action="/register" method="POST"> 
        <h1 class="h2 mb-3 " style="text-align: center"> Register </h1>
        <div class="social-btn">
            <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i> <a href= "/auth/google"> Register with Google+ </a></span> </button>
        </div>
        <hr>
        <p style="text-align:center"> OR  </p>
        <input type="email" name="username" class="form-control" placeholder="Email address" required="" autofocus="">
        <input type="password" name="password" class="form-control" placeholder="Password" required="">
        
        <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Register</button>
        <hr>
        <p style="text-align:center">Already have an account!</p> 
        <a class="btn btn-primary btn-block" type="button"  href="/login"><i class="fas fa-user-plus"></i> Login </a>
        </form>
    </div>

<%- include("partials/footer"); -%>